<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.cardview.widget.CardView
    android:id="@+id/cv_live"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_marginLeft="16dp"
    >
    <ImageView
        android:id="@+id/iv_card_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_standard_bg"
        android:layout_below="@id/recyclerView"
        android:visibility="visible"
        android:scaleType="fitXY"
        />

<!--  app:cardBackgroundColor="#597E5D"  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="36dp"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tb_select_title_for_dark"
        />

    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SSC CPO Live Coaching in mumbai"
        android:maxWidth="190dp"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/iv_logo"
        />


    <TextView
        android:id="@+id/tv_starts_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starts in 1 Day"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_logo"
        android:drawableLeft="@drawable/ic_time"
        android:drawablePadding="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/rounded_corner"
        />


    <LinearLayout
    android:id="@+id/ll_details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    >
    <TextView
        android:id="@+id/tv_live_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_video"
        android:text="250+ Live Classes"
        android:textColor="@android:color/white"
        android:drawablePadding="8dp"
        android:paddingLeft="4dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_bookmark"
        android:text="7000+ Questions"
        android:textColor="@android:color/white"
        android:drawablePadding="8dp"
        android:textSize="14sp"
        android:paddingLeft="2dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        />



    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_pdf"
        android:text="150+ Notes"
        android:textColor="@android:color/white"
        android:drawablePadding="14dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:paddingLeft="4dp"
        android:textStyle="bold"
        />

</LinearLayout>


    <ImageView
        android:id="@+id/iv_course_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test_1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:scaleType="fitEnd"
        />





</RelativeLayout>


</androidx.cardview.widget.CardView>

</FrameLayout>
